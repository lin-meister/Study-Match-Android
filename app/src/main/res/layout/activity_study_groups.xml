<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_study_groups"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m.hoth.StudyGroups"
    android:background="#3284bf"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_button"
            android:id="@+id/backButton"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:text="Study Groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textColor="#ffe800"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <TextView
                android:text="CS 32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/course"
                android:textSize="18sp"
                android:textColor="#ffe800"
                android:layout_marginBottom="20dp"
                android:textAlignment="center" />

            <TextView
                android:text="Once you join a group, you’ll be able to access its members’ contact info to connect and start studying!"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="#ffe800"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/add_group"
            android:id="@+id/addButton"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top">

    </RelativeLayout>

    <TextView
        android:text="My Groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myGroupsLabel"
        android:textSize="24sp"
        android:textColor="#ffe800"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe800"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:padding="10dp"
        android:weightSum="1"
        android:id="@+id/piedPiper">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/richard"
                android:id="@+id/richardGroupIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                app:srcCompat="@drawable/jared"
                android:id="@+id/jaredGroupIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/erlich"
                android:id="@+id/erlichGroupIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                app:srcCompat="@drawable/gilfoyle"
                android:id="@+id/gilfoyleGroupIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minWidth="200dp">

            <TextView
                android:text="Pied Piper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/groupName"
                android:textSize="24sp"
                android:textAlignment="textStart"
                android:textColor="#ffe800"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Richard, Jared, Erlich, Gilfoyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffe800"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Schedule: \n- Thursdays: 7:30PM-10:00PM \n- Fridays: 11:00AM-2:00PM"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:textSize="12sp"
                android:textColor="#ffe800"
                android:minLines="3" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.56">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_forward"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="31dp"
                android:onClick="goToPiedPiper"
                android:id="@+id/goToPiedPiper" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:text="Other Groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/otherGroupsLabel"
        android:textSize="24sp"
        android:textColor="#ffe800"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ffe800"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:padding="10dp"
        android:weightSum="1"
        android:id="@+id/beatles">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/richard"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                app:srcCompat="@drawable/jared"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/erlich"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                app:srcCompat="@drawable/gilfoyle"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.67"
            android:minWidth="200dp">

            <TextView
                android:text="The Beatles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="textStart"
                android:textColor="#ffe800"
                android:textStyle="normal|bold" />

            <TextView
                android:text="John, Paul, George, Ringo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffe800"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Schedule: \n- Mondays: 11:00AM-1:00PM \n- Fridays: 10:00AM-2:00PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffe800"
                android:minLines="3" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_forward"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="31dp"
                android:id="@+id/goToBeatles" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ffe800"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:padding="10dp"
        android:weightSum="1"
        android:id="@+id/bikiniBottomSquad">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/richard"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/erlich"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.83"
            android:minWidth="200dp">

            <TextView
                android:text="Bikini Bottom S..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="textStart"
                android:textColor="#ffe800"
                android:textStyle="normal|bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:text="SpongeBob, Patrick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffe800"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Schedule: \n- Mondays: 11:00AM-1:00PM \n- Fridays: 10:00AM-2:00PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffe800"
                android:minLines="3" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_forward"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="31dp"
                android:onClick="goToBikiniBottomSquad"
                android:id="@+id/goToBikiniBottomSquad" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
