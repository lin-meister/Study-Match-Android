<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m.hoth.MainActivity"
    android:background="#3284bf">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:text="Welcome to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcome"
            android:textAlignment="center"
            android:textColor="#ffe800"
            android:textSize="24sp"
            android:padding="12px"
            android:fontFamily="sans-serif" />

        <TextView
            android:text="Study Match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studyMatch"
            android:textSize="48sp"
            android:textColor="#ffe800"
            android:textAlignment="center"
            android:padding="12px"
            android:textStyle="normal|bold" />

        <ImageView
            app:srcCompat="@drawable/richard"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:layout_width="128dp"
            android:layout_height="128dp" />

        <TextView
            android:text="Richard Hendricks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textAlignment="center"
            android:textColor="#ffe800"
            android:padding="20px"
            android:textSize="36sp"
            android:layout_marginBottom="10px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actionButtons"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:text="Find Groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/findGroups"
                android:onClick="findGroup"
                android:layout_weight="1"
                android:background="#ffe800"
                android:textColor="#3284bf"
                android:padding="10dp"
                android:layout_margin="10dp" />

            <Button
                android:text="My Groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myGroups"
                android:layout_weight="1"
                android:background="#ffe800"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#3284bf" />

            <Button
                android:text="Edit Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editProfile"
                android:layout_weight="1"
                android:background="#ffe800"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="#3284bf" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
